{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    //"resolveJsonModule": true,
    "baseUrl": "./",
    "allowJs": true,
  },
  "include": [ "src" ]
}
